{
  "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "warnOnUnsupportedTypeScriptVersion": false,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "jest": true,
        "es6": true,
        "node": true
    },
    "plugins": [
      "@typescript-eslint"
  ],
  "extends" : [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/eslint-recommended"
  ],
  "ignorePatterns": [
    "**/node_modules/**",
    "/tests/**",
    "/dist/**"
    //"/src/lib/*.generated.d.ts",
    
],
"rules": { 
  "no-restricted-syntax": [
    "error",
    "LabeledStatement",
    "WithStatement"
  ]
    
  }
}